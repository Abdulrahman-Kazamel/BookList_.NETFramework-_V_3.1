@page
@model BookList3._1.RazorPages.BookList.CreateModel
@{
    ViewData["Title"] = "Create";
}


<section class="p-5 border">
    <form method="post">
        <div class="form-group row">


            <label asp-for="Book.Name" class="col-3"></label>
            <input asp-for="Book.Name" class="form-control col-6" />
            <span class="text-danger text-truncate" asp-validation-for="Book.Name"></span>
        </div>
        <div class="form-group row">

            <label asp-for="Book.Author" class="col-3"></label>
            <input asp-for="Book.Author" class="form-control  col-6" />
            <span class="text-danger text-truncate" asp-validation-for="Book.Author"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Book.ISBN" class="col-3"></label>
            <input asp-for="Book.ISBN" class="form-control  col-6" />
            <span class="text-danger text-truncate" asp-validation-for="Book.ISBN"></span>
        </div>
        <div class="offset-3 col-6 d-flex justify-content-around">
            <button class="btn btn-info">Submit</button>
            <a  asp-page="Index" class="btn btn-warning">Back to List</a>
        </div>

    </form>


</section>

        @section Scripts{

    <partial name="_ValidationScriptsPartial"></partial>

        }